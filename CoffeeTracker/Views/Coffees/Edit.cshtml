@model CoffeeTracker.Models.Coffee

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Coffee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="recorded" class="control-label"></label>
                <input asp-for="recorded" class="form-control" />
                <span asp-validation-for="recorded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="consumed" class="control-label"></label>
                <input asp-for="consumed" class="form-control" />
                <span asp-validation-for="consumed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CEU" class="control-label"></label>
                <input asp-for="CEU" class="form-control" />
                <span asp-validation-for="CEU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="iced" /> @Html.DisplayNameFor(model => model.iced)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
